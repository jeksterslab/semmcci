################################################################################
#====[ Settings ]===============================================================
################################################################################

#====[ vi readline ]============================================================
set -o vi
set show-mode-in-prompt on # display which one is currently active
set vi-ins-mode-string \1\e[6 q\2
set vi-cmd-mode-string \1\e[2 q\2

#====[ line wrap ]==============================================================
shopt -s checkwinsize

#====[ noclobber ]==============================================================
set -o noclobber

#====[ auto cd ]================================================================
shopt -s autocd
